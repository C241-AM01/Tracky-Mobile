<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp"
    android:background="@color/white"
    tools:context=".ui.assetreq.AssetRequestFragment">

    <TextView
        android:id="@+id/tv_asset_req_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_assetreq"
        android:fontFamily="@font/plus_jakarta_sans"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp" />

    <SearchView
        android:id="@+id/sv_asset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="No Asset Request Available"
        android:layout_gravity="center"
        android:fontFamily="@font/plus_jakarta_sans_italic"

        />

